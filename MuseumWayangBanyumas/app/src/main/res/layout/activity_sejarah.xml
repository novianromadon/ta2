<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/warna_primer"
    tools:context=".SejarahActivity">

    <TextView
        android:id="@+id/tv_judul_sejarah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sejarah"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/gambar_sejarah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slide1"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nama_sejarah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text="Museum Wayang Banyumas"/>

    <TextView
        android:id="@+id/tv_judul_desc_sejarah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Deskripsi"/>

    <TextView
        android:id="@+id/tv_deskripsi_sejarah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:text="Deskripsi Sejarah"/>

</LinearLayout>